<proxy xmlns="http://ws.apache.org/ns/synapse" name="dataservice-proxy" transports="vfs">
    <target>
         <inSequence>
            <!-- LOOKUP DB -->

            <!-- Make the call -->
            <call>
                <endpoint>
                    <http method="GET" uri-template="http://localhost:8080/services/Dataservice/taxcodes/lookup/{uri.var.code}" />
                </endpoint>
            </call>

            <!-- Log the response after the call -->
            <log level="full">
                <property name="ResponsePayload" expression="$body"/>
            </log>
        </inSequence>
    </target>
</proxy>
